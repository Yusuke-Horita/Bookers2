<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60 %>
<table>
	<tr>
		<td>name</td>
		<td><%= user.name %></td>
	</tr>
	<tr>
		<td>introduction</td>
		<td><%= user.introduction %></td>
	</tr>
</table>
<% if user_signed_in? %>
	<%= link_to "Edit", edit_user_path(user) %>
<% end %>

<h1>New book</h1>
<%= form_for(book) do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit "Create Book" %>
<% end %>