<div class="container">
	<div class="row">
		<div class="col-xs-5">
			<h1>Editing Book</h1>
			<% if @book.errors.any? %>
				<%= @book.errors.full_messages.count %> errors prohibited this obj from being saved:
				  <ul>
				 	<% @book.errors.full_messages.each do |message| %>
				 	  <li><%= message %></li>
				 	<% end %>
				  </ul>
			<% end %>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class: "form-control" %>
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "form-control" %>
				<br>
				<%= f.submit "Update Book", class: "btn btn-primary" %>
			<% end %>
			<span><%= link_to "Show", book_path(@book) %> | </span>
			<span><%= link_to "Back", books_path %></span>
		</div>
	</div>
</div>