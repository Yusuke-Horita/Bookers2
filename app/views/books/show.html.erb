<%= render "books/list", user: @user, book: @newbook %>

<h1>Book detail</h1>
<table>
	<tbody>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %><br>
				<%= link_to @user.name, "#" %></td>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>

		    <% if user_signed_in? %>
		  		<td><%= link_to "Edit", edit_book_path(@book) %> |　</td>
				<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
			<% else %>
				<td></td>
				<td></td>
		  <% end %>
		</tr>
	</tbody>
</table>