<div class="container">
	<h1>User info</h1>
	<% if @user.errors.any? %>
	  <%= @user.errors.full_messages.count %> errors prohibited this obj from being saved:
		<% @user.errors.full_messages.each do |message| %>
			<ul>
				<li><%= message %></li>
			</ul>
		<% end %>
	<% end %>
	<%= form_for(@user) do |f| %>
		<h4>Name</h4>
		 <%= f.text_field :name %>
		<h4>Image</h4>
		 <%= f.attachment_field :profile_image %>
		<h4>Introduction</h4>
		 <%= f.text_area :introduction %>
		 <%= f.submit "Update User" %>
	<% end %>
</div>