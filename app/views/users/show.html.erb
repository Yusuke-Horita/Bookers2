<%= render "books/list", user: @user %>

<h1>Books</h1>
<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %></td>
		<td><%= link_to book.title, "#" %></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</table>